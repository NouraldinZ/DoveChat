<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbackground"
    tools:context=".SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp"
        android:text="Needs Work!"
        android:textColor="#FFFFFF"
        android:textSize="30sp">

    </TextView>

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="38dp"
        android:clickable="true"
        android:background="@drawable/arrow" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/profile_image"
        app:civ_border_color="#FF000000"
        app:civ_border_width="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mrRobot"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="280dp"
        android:text="Update username  or password :">


    </TextView>

    <EditText
        android:id="@+id/username"
        android:layout_width="299.42dp"
        android:layout_height="49.75dp"
        android:layout_below="@+id/mrRobot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:hint="Username"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textAlignment="center"
        android:background="@drawable/redrectangle"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/status"
        android:layout_width="299.42dp"
        android:layout_height="49.75dp"
        android:layout_below="@+id/mrRobot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:background="@drawable/redrectangle"
        android:hint="Status"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="322dp"
        android:layout_height="49.75dp"
        android:layout_below="@+id/mrRobot"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="480dp"
        android:background="@drawable/update" />

</RelativeLayout>